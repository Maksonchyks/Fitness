{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log-.txt",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
    },
    "ConnectionStrings": {
        "IdentityDb": "Host=localhost;Port=5432;Database=fitness_identity;Username=postgres;Password=1234;Pooling=true;",
        "Redis": "localhost:6380,abortConnect=false"
    },
    "JwtSettings": {
        "Secret": "your-super-secret-key-at-least-32-characters-long-change-in-production",
        "Issuer": "FitnessApp.Identity",
        "Audience": "FitnessApp",
        "AccessTokenExpirationMinutes": 60,
        "RefreshTokenExpirationDays": 7
    },
    "Cors": {
        "AllowedOrigins": [
            "http://localhost:3000",
            "http://localhost:5173",
            "https://fitnessapp.com"
        ]
    },
    "RateLimiting": {
        "PermitLimit": 100,
        "Window": 60,
        "QueueLimit": 2
    },
    "EnableSwagger": true,
    "HealthChecks": {
        "Enabled": true,
        "Endpoint": "/health"
    }
}